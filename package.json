{
  "name": "node-ts-express-template",
  "version": "1.0.0",
  "main": "index.js",
  "author": "wesbragagt",
  "license": "MIT",
  "scripts": {
    "format": "prettier-standard --format",
    "lint": "prettier-standard --lint",
    "build": "webpack --config webpack.config.prod.js",
    "test": "jest -u --detectOpenHandles",
    "dev": "webpack --config webpack.config.dev.js",
    "dev:docker": "docker-compose up",
    "build:docker": "docker -t node-ts-express build ."
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "supertest": "^6.0.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.21",
    "@types/supertest": "^2.0.10",
    "@types/webpack-env": "^1.16.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mrm": "^2.5.13",
    "nodemon": "^2.0.6",
    "nodemon-webpack-plugin": "^4.3.2",
    "npm-run-all": "^4.1.5",
    "prettier-standard": "^16.4.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "webpack": "^5.10.3",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2",
    "webpack-shell-plugin-next": "^2.0.8"
  }
}
